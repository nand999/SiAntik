<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:focusableInTouchMode="true"
        android:id="@+id/lupaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa Sandi"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:id="@+id/textlupasandi"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/textlupasandi">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundColor="@color/white">

                <EditText
                    android:id="@+id/EditTextNIKLupa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIK"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundColor="@color/white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="Nama Lengkap"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:id="@+id/EditTextNamaLupa"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_eyeLup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_eye" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundColor="@color/white">

                <EditText
                    android:id="@+id/EditTextPassBaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sandi Baru"
                    android:inputType="textPassword"
                    android:singleLine="true"/>

                <!--                <ImageButton-->
                <!--                    android:id="@+id/Btn_eye"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="end|bottom"-->
                <!--                    android:layout_marginEnd="8dp"-->
                <!--                    android:layout_marginBottom="8dp"-->
                <!--                    android:background="?android:attr/selectableItemBackgroundBorderless"-->
                <!--                    android:src="@drawable/ic_eye" />-->

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:boxBackgroundColor="@color/white">


                <EditText
                    android:id="@+id/EditTextPassBaruKon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Konfirmasi Sandi Baru"
                    android:inputType="textPassword"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SIMPAN"
                android:textSize="20dp"
                android:backgroundTint="@color/biru"
                android:layout_marginTop="35dp"/>

            <Button
                android:id="@+id/ButtonKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="KEMBALI"
                android:textSize="20dp"
                android:backgroundTint="@color/merah"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>